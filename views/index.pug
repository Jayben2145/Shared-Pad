extends layout

block content
  header.appbar
    h1 Shared Pad
    div.status
      span Start a pad by entering a key
  main.container
    form(action="/pad", method="get", class="card")
      label(for="room") Enter a key / pin
      input#room(type="text" name="room" placeholder="e.g. bob" required minlength="1" maxlength="64" pattern="[A-Za-z0-9_-]+")
      button(type="submit") Go
  footer.foot
    p Anyone with the same key sees the same pad in realtime.
